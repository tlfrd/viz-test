<!DOCTYPE html>
<html>
  <head>
    <title>VizTest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-turbolinks="false">
    <%= nav_bar brand: "VizTest", static: :top, inverse: true, response: true do %>
      <%= menu_group do %>
        <%= menu_item "Visualisations", visualisations_path %>
        <%= menu_item "Tasks", tasks_path %>
        <%= menu_item "Experiments", experiments_path %>
        <%= menu_item "Results", results_path %>
      <% end %>
    <% end %>
    <div class="body-container">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
