<%= form_for(experiment_task) do |f| %>
  <% if experiment_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(experiment_task.errors.count, "error") %> prohibited this experiment_task from being saved:</h2>

      <ul>
      <% experiment_task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :experiment_id %>
    <%= f.collection_select(:experiment_id, Experiment.all, :id, :name, :selected => @experiment_id) %>
  </div>

  <div class="field">
    <%= f.label :task_id %>
    <%= f.collection_select(:task_id, Task.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :order %>
    <%= f.number_field :order, :value => @experiment_task.order || 1, :class => "form-control" %>
  </div>

  <br/>
  
  <div class="actions">
    <%= f.submit "Submit", :class => 'btn btn-success' %>
  </div>

<% end %>
